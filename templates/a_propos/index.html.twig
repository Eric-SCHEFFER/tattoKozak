{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/aPropos.css') }}">
{% endblock %}

{% block title %}
	{{ SiteName }}: À propos
{% endblock %}

{% block body %}
	<h1>À Propos</h1>

	<div class="blocPrincipal">

		<div class="blocSecondaire">
			<h2>Qui sommes nous ?</h2>
			<p>{{ aPropos[0].getPresentationAPropos | nl2br }}</p>
		</div>

		{% set a = aPropos[0] %}
		<div class="blocSecondaire">
			<h2>Nos coordonnées</h2>

			<div class="bloc3">
				<div class="gras toUpper">{{ a.getNomEntreprise }}</div>
			</div>

			<div class="bloc3">
				<div>{{ a.getAdresse }}</div>
			</div>

			<div class="bloc3">
				<div>{{ a.getComplementAdresse }}</div>
			</div>

			<div class="bloc4">
				<div class="bloc5">{{ a.getCodePostal }}</div>
				<div class="bloc5 toUpper">{{ a.getVille }}</div>
			</div>

			<div class="bloc3">
				<div>Tel: {{ a.getTelephone }}</div>
				<div>Tel2: {{ a.getTelephone2 }}</div>
				<div>Email: <a href="mailto:{{ a.getEmailContact }}">{{ a.getEmailContact }}</a></div>
				<div>Facebook: {{ a.getFacebook }}</div>
				<div>{{ a.autre }}</div>
			</div>
		</div>
	</div>
{% endblock %}
