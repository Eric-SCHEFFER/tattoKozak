{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/carteApercuRealisation.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/boutonsEtInputs.css') }}">
{% endblock %}

{% block content %}
	<div id="slogan">
		<p>l'art dans la peau</p>
	</div>

	{%

		set realisations = [
		{
			titre: "Aigle dans le dos",
			image: "assets/images/viktor-juric-8p5NJcy8Wr4-unsplash.jpg",
			hook: "L'aigle à repris son envol",
			resume: "Ni moi, ni ma cliente n'avions d'idée sur le tatouage qu'il lui fallait. Elle voulait un oiseau",
			dateDebut: "01/04/2020",
			dateFin: "14/04/2020"
		},
		{
			titre: "pomme superbe",
			image: "assets/images/mateus-campos-felipe-1la1FHm89mg-unsplash.jpg",
			hook: "Le rose, dans tous ses états",
			resume: "J'ai commencé avec une idée précise sur le tatouage qu'elle désirait. Elle voulait une pomme rose assortie à son iphone.",
			dateDebut: "05/05/2020",
			dateFin: "15/05/2020"
		},
		{
			titre: "Livres",
			image: "assets/images/sergio-souza-bmPepl7vhUs-unsplash.jpg",
			hook: "Encore des livres",
			resume: "Une cliente avait une idée précise sur le tatouage qu'elle désirait. Elle voulait un livre ouvert. Mais elle avait déjà trop de tatouages.",
			dateDebut: "11/06/2020",
			dateFin: "16/06/2020"
		}
		]
	%}

	<div class="container-apercuRealisations">

		{% for realisation in realisations %}
			<div class="apercuRealisation">
				<div class="apercuRealisation-image">
					<img src=" {{ realisation.image }} ">

				</div>
				<div class="apercuRealisation-titre">
					<h3>{{ realisation.titre }}</h3>
				</div>
				<div class="apercuRealisation-hook">
					<h4 class="accroche">{{ realisation.hook }}</h4>
				</div>
				<div class="apercuRealisation-resume">
					<p>{{ realisation.resume }}</p>
					<a class="bouton1" href="" >Voir</a>
				</div>
			</div>


		{% endfor %}
	</div>

{% endblock %}
