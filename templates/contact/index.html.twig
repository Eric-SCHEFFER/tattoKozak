{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/formulaireContact.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/boutonsEtInputs.css') }}">
{% endblock %}
{% block title %}
	{{ SiteName }}: Nous contacter
{% endblock %}

{% block body %}
	<h1>Nous contacter</h1>
	<div class="container0">
		{{ form_start(contactForm, {'attr':{'class':'form1'}}) }}

		<div class="blocChamp">
			{{ form_row(contactForm.prenom, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.nom, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.tel, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.email, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.objet, {'attr':{'class':'champ', 'value':champObjetPreRempli}}) }}
		</div>
		<div class="blocChamp2">
			{{ form_row(contactForm.message, {'value': champMessagePreRempli, 'attr':{'class':'champ'}}) }}
			{# Champ caché pôt de miel pour les petits robots #}
			<div>
				{{ form_row(contactForm.motif, {'attr':{'class':'champ'}}) }}
			</div>
		</div>

		<p class="consentementRgpd">
			<input type="checkbox" class="caseACocher" id= "accordDonneesPerso">
			<label for="accordDonneesPerso">
				<span class="texteRgpd">
				Je consens à la collecte de mes données personnelles dans le cadre de cette demande de contact.
				</span>
			</label>
		</p>

		<div class="blocChamp">
			{{ form_row(contactForm.envoyer,
					{'attr':{'disabled':'disabled',
					'class':'buttonDisabled'
					}}
				)
		 	}}
		</div>
		{{ form_end(contactForm) }}
	</div>
	{% block javascript %}
		<script src="{{ asset('assets/js/checkBoxRgpdFormulaireContact.js') }}"></script>
	{% endblock %}
{% endblock %}
