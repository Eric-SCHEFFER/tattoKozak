{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/formulaireContact.css') }}">
{% endblock %}
{% block title %}
	Nous contacter
{% endblock %}

{% block body %}

	<h1>Nous contacter</h1>

	{{ form_start(contactForm, {'attr':{'class':'form1'}}) }}

	<div class="ligne">
		<div class="blocChamp">
			{{ form_row(contactForm.prenom, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.nom, {'attr':{'class':'champ'}}) }}
		</div>
	</div>

	<div class="ligne">
		<div class="blocChamp">
			{{ form_row(contactForm.tel, {'attr':{'class':'champ'}}) }}
		</div>
		<div class="blocChamp">
			{{ form_row(contactForm.email, {'attr':{'class':'champ'}}) }}
		</div>
	</div>

	<div class="ligne">
		<div class="blocChamp">
			{{ form_row(contactForm.objet, {'attr':{'class':'champ'}}) }}
		</div>
	</div>

	<div class="ligne">
		<div class="blocChamp">
			{{ form_row(contactForm.message, {'attr':{'class':'champ'}}) }}
		</div>
	</div>

	<div class="ligne">
		<div class="blocChamp">
			{{ form_row(contactForm.envoyer, {'attr':{'class':'champ'}}) }}
		</div>
	</div>

	{{ form_end(contactForm) }}


{% endblock %}
